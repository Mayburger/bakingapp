<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:padding="@dimen/dimen_4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_12dp">

            <TextView
                android:id="@+id/tvCakeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cake"
                android:textSize="@dimen/text_size_cake_name" />

            <TextView
                android:id="@+id/tvStepsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCakeName"
                android:gravity="center_vertical"
                android:text="@string/steps" />

            <ImageView
                android:id="@+id/ivServings"
                android:layout_width="@dimen/dimen_image_serving"
                android:layout_height="@dimen/dimen_image_serving"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/serving" />

            <TextView
                android:id="@+id/tvServingsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:layout_toLeftOf="@id/ivServings"
                android:text="@string/servings"
                android:textSize="@dimen/text_size_servings" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>